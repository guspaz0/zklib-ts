{
    "version": "1.6.2",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2019",
        "module": "NodeNext",
        "declaration": true,
        "declarationDir": "dist/types",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist"
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules", "dist"
    ]
}